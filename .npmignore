# Ignore everything by default
*

# Allow the following files to be included in the package
!dist/
!README.md
!LICENSE
!package.json
!CHANGELOG.md
!index.js
!index.d.ts

# Exclude source code
src/
__tests__/
tests/

# Exclude configuration files
tsconfig.json
tsup.config.ts
jest.config.js
jest.setup.ts
.eslintrc*
.prettierrc*
*.config.*
.vscode/
.idea/

# Exclude Storybook files
.storybook/
storybook-static/

# Exclude environment files and logs
.env
.env.*
*.log

# Exclude lock files
package-lock.json
yarn.lock
pnpm-lock.yaml
