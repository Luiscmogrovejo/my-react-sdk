{
    "compilerOptions": {
        "target": "ES2022",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "DOM",
            "ES2022",
            "DOM.Iterable"
        ],
        "jsx": "react-jsx", // Enable JSX syntax
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true, // tsup will handle emitting files
        "outDir": "dist",
        "types": [
            "jest",
            "node"
        ] // Include jest (and node) types globally
    },
    "include": [
        "src/**/*", // Include all your source files
        "tests/**/*" // Also include your tests folder (or __tests__ if thatâ€™s what you use)
    ],
    "exclude": [
        "node_modules"
    ]
}